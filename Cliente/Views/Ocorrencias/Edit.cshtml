@model OcorrenciaViewModel

@{
    ViewData["Title"] = "Edit Ocorrência";
}

<div class="text-center">
    <h1 class="display-4">Edit Ocorrência</h1>

    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="DataAbertura" class="control-label"></label>
            <input asp-for="DataAbertura" class="form-control" />
            <span asp-validation-for="DataAbertura" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataOcorrencia" class="control-label"></label>
            <input asp-for="DataOcorrencia" class="form-control" />
            <span asp-validation-for="DataOcorrencia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ResponsavelAberturaId" class="control-label"></label>
            <input asp-for="ResponsavelAberturaId" class="form-control" />
            <span asp-validation-for="ResponsavelAberturaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ResponsavelOcorrenciaId" class="control-label"></label>
            <input asp-for="ResponsavelOcorrenciaId" class="form-control" />
            <span asp-validation-for="ResponsavelOcorrenciaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conclusao" class="control-label"></label>
            <textarea asp-for="Conclusao" class="form-control"></textarea>
            <span asp-validation-for="Conclusao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
