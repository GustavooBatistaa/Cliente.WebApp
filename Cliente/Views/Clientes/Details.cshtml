@model ClienteViewModel

@{
    ViewData["Title"] = "Cliente Details";
}

<div class="text-center">
    <h1 class="display-4">Cliente Details</h1>

    <div>
        <h4>Cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Endereco</dt>
            <dd class="col-sm-10">@Model.Endereco</dd>

            <dt class="col-sm-2">Telefone</dt>
            <dd class="col-sm-10">@Model.Telefone</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
        </dl>
    </div>
    <p>
        <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Back to List</a>
    </p>
</div>
